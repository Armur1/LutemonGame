<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imgChampionArena"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="Champion Image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/textChampionStats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Champion Stats"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose an Opponent"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgOpponent"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/green_lutemon"
                android:contentDescription="Opponent Image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/textOpponentInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Green - 25 HP\nAttack: 10, Defense: 5"
                android:textSize="16sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnEnterBattle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Battle"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/btnQuit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quit to Champion Selection"
            android:layout_marginTop="12dp" />

    </LinearLayout>
</ScrollView>


